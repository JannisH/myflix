%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @videos.each do |video|
              %tr
                %td
                  %input.form-control(type="text" value="#{current_user.get_priority(video)}")
                %td
                  = link_to video.title,video_path(video)
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = current_user.get_rating(video)

                %td
                  = link_to video.category.name,category_path(video.category)
                %td
                  = link_to video_remove_path(video), method: :delete do
                    %i.glyphicon.glyphicon-remove
        = button_to "Update Instant Queue", nil, class: "btn btn-default"




