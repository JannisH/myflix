%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX"
  -if session[:user_id] != nil
    %ul.col-md-4.clearfix
      %li= link_to "Videos"
      %li= link_to "My Queue"
      %li= link_to "People", relationships_path
    = form_tag search_videos_path, class: "span5 for-search", method: "get" do
      %input.search-query(name="search_term" type="text" placeholder="Search for videos")
        %button.btn(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            = "Welcome, #{User.find(session[:user_id]).full_name}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li= link_to 'logout', logout_path


